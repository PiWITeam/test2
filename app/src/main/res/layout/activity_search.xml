<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Search">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".Search">

        <TextView
            android:id="@+id/sucursalLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="14"
            android:textFontWeight="Bold"
            android:layout_marginTop="30dp"
            android:text="@string/sucursal_label" />

        <Spinner
            android:id="@+id/sucursalDrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/areaLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="14"
            android:textFontWeight="Bold"
            android:layout_marginTop="30dp"
            android:text="@string/area_label" />

        <Spinner
            android:id="@+id/areaDrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/equipoLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textFontWeight="Bold"
            android:layout_marginTop="30dp"
            android:text="@string/equipo_label" />

        <Spinner
            android:id="@+id/eqpDrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textFontWeight="Bold"
            android:background="@color/pinkAccent"
            android:text="@string/searchButton" />

    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>
